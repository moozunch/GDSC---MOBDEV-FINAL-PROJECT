<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/arrow___left_circle"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-80dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="45dp"
                android:fontFamily="@font/plusjakartasans_bold"
                android:textSize="22sp"
                android:text="Data Siswa"
                android:textAlignment="center"
                android:textColor="@color/white" />

        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="40dp"
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/name"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/plusjakartasans_semibold"
            android:scrollbarSize="16sp"
            android:text="Annisa Putri Aprilia"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:fontFamily="@font/plusjakartasans_semibold"
            android:scrollbarSize="16sp"
            android:text="231401036"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_box"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:scrollbarSize="16sp"
                    android:text="Email:                        "
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:scrollbarSize="16sp"
                    android:text="annisa.putri.aprilia@gmail.com"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:scrollbarSize="16sp"
                    android:text="Angkatan:             "
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/angkatan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:scrollbarSize="16sp"
                    android:text="23"
                    android:textColor="@color/white" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:scrollbarSize="16sp"
                    android:text="Fakultas:                "
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/fakultas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:scrollbarSize="16sp"
                    android:text="Fasilkom-TI"
                    android:textColor="@color/white" />

            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:scrollbarSize="16sp"
                    android:text="Prodi:                       "
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/prodi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:scrollbarSize="16sp"
                    android:text="Ilmu Komputer"
                    android:textColor="@color/white" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:scrollbarSize="16sp"
                    android:text="Semester:            "
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/semester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:scrollbarSize="16sp"
                    android:text="2"
                    android:textColor="@color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:scrollbarSize="16sp"
                    android:text="Status:                   "
                    android:textColor="@color/white" />
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/plusjakartasans_semibold"
                    android:scrollbarSize="16sp"
                    android:text="Mahasiswa Aktif"
                    android:textColor="@color/white" />
            <!--TODO: buat lebih menarik dengan warna apalagi karena mahasiswa aktif, perbaiki ui dan ukuran-->
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>