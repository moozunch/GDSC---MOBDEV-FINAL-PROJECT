<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="45dp"
                    android:src="@drawable/arrow___left_circle" />

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:fontFamily="@font/plusjakartasans_bold"
                    android:text="DATA SISWA"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

            </RelativeLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_profile_picture_15257" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/plusjakartasans_semibold"
                android:scrollbarSize="16sp"
                android:text="Annisa Putri Aprilia"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/nim"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/plusjakartasans_semibold"
                android:scrollbarSize="16sp"
                android:text="231401036"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/background_box"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text="Email"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text=":"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/plusjakartasans_semibold"
                        android:scrollbarSize="16sp"
                        android:text="annisa.putri.aprilia@gmail.com"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text="Angkatan"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text=":"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/angkatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/plusjakartasans_semibold"
                        android:scrollbarSize="16sp"
                        android:text="23"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text="Fakultas"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text=":"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/fakultas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/plusjakartasans_semibold"
                        android:scrollbarSize="16sp"
                        android:text="Fasilkom-TI"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text="Prodi"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text=":"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/prodi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/plusjakartasans_semibold"
                        android:scrollbarSize="16sp"
                        android:text="Ilmu Komputer"
                        android:textColor="@color/white" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text="Semester"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text=":"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/semester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/plusjakartasans_semibold"
                        android:scrollbarSize="16sp"
                        android:text="2"
                        android:textColor="@color/white" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text="Status"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="90dp"
                        android:fontFamily="@font/plusjakartasans_bold"
                        android:scrollbarSize="16sp"
                        android:text=":"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="100dp"
                        android:fontFamily="@font/plusjakartasans_semibold"
                        android:scrollbarSize="16sp"
                        android:text="Mahasiswa Aktif"
                        android:textColor="@color/white" />
                    <!--TODO: buat lebih menarik dengan warna apalagi karena mahasiswa aktif, perbaiki ui dan ukuran-->
                </RelativeLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>